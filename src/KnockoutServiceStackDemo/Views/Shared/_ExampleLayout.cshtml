@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  var body = RenderBody();
}
@section RightMenu
{
  <ul class="nav">
    <li><a href="#description">Description</a></li>
    <li><a href="#live">Live example</a></li>
    <li><a href="#model">Model</a></li>
    <li><a href="#razor">Razor</a></li>    
    <li><a href="#controller">Controller</a></li>
    <li><a href="#html">Html</a></li>
  </ul>
}
<h1 style="text-align: center">@ViewBag.Caption</h1>
<article id="description">
  <h2>Description</h2>
  <div class="well">
    @ViewBag.Description
  </div>
</article>
<article id="live">
  <h2>Live example</h2>
  <div class="well">
    @body
  </div>
</article>
<article id="model">
  <h2>Model</h2>
  <pre class="prettyprint lang-cs">@ViewBag.Model</pre>
</article>
<article id="razor">
  <h2>Razor</h2>
  <pre class="prettyprint lang-cs">@ViewBag.Razor</pre>
</article>
<article id="controller">
  <h2>Controller</h2>
  <pre class="prettyprint lang-cs">@ViewBag.Controller</pre>
</article>
<article id="html">
  <h2>Html (autogenerated)</h2>
  <pre class="prettyprint lang-html">@body.ToHtmlString()</pre>
</article>
